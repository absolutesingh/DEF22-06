package bitwise;

public class OddEven {

	static void OddOrEvenUsingAND(int n)
	{
		int bM = 1;
		if((n & bM) == 1)
		{
			System.out.println(n + " is odd");
		}
		else {
			System.out.println(n + " is even");
		}
	}
	
	public static void main(String[] args) {
		OddOrEvenUsingAND(5);
		OddOrEvenUsingAND(4);
	}

}
