package stacks;

class MyStack{
	final int size = 10;
	int arr[] = new int[size];
	int top = -1;
	
	boolean isEmpty() {
		return top == -1;
	}
	
	int peek() {
		if(this.isEmpty())
		{
			System.out.println("Empty Stack, Nothing at top.");
			return -1; //Error Code
		}
		return arr[top];
	}
	
	void push(int data)
	{
		top = top + 1;
		arr[top] = data;
	}
	
	int pop()
	{
		int x = arr[top];
		top = top - 1;
		return x;
	}
}

public class ArrayImp {

	public static void main(String[] args) {
		MyStack stack = new MyStack();
		System.out.println(stack.peek());
		System.out.println(stack.isEmpty());
		stack.push(1);
		stack.push(2);
		stack.push(3);
		System.out.println(stack.isEmpty());
		System.out.println(stack.peek());
		System.out.println(stack.pop());
		System.out.println(stack.peek());
		System.out.println(stack.pop());
		System.out.println(stack.pop());
		System.out.println(stack.isEmpty());
	}

}
